<html>
<head>
  <title>Node app!!</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

  <!-- jQuery library -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

  <!-- Latest compiled JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
  <div class="container" style="margin-top: 55px">
    <div class="row">
      <div class="col-md-6 col-md-push-3">
        <% if(message){ %>
          <div class="alert alert-success" role="alert" ><%= message %></div>
        <% }%>
        <div class="content">
          <div class="card bg-primary text-white border-radius " style="height: 40px">
            <div class="card-body text-center" style="padding-top: 5px">
              <span class="glyphicon glyphicon-info-sign"></span> Enter Your Information:</div>
          </div>
          <form method="POST" action="/users" onsubmit="return validateFile()" enctype="multipart/form-data" style="padding-top: 20px">
            <div class="form-group">
              <label for="name"> Name:</label>
              <input type="text" class="form-control" name="name" placeholder="Enter your full name" required>
            </div>
            <div class="form-group">
              <label for="phone">Phone:</label>
              <input type="text" class="form-control" name="phone" placeholder="phone number" required>
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" name="email" placeholder="eg. bob@gmail.com" required>
            </div>
            <div class="form-group">
              <label for="Jobtitel">Job Title:</label>
              <input type="text" class="form-control" name="job" placeholder="eg. web developer, designer, programmer" required>
            </div>
            <div class="form-group">
              <label for="resume">Resume:</label>
              <input id="file" type="file"
              accept=".pdf, application/pdf" 
              class="form-control" name="resume" 
              placeholder="uplode your resume"
              onchange="validateFile()" required>
            </div>
            <button type="Submit" class="btn btn-primary mb-2" value="submit">Submit</button>
          </form>
        </div>
      </div>
    </div>
    <p class="text-center">
      You visited this page <%=pageCount%> times.
    </p>
  </div>
  <script type="text/javaScript">
    function validateFile(params) {
      var filename=document.getElementById('file').files[0].name;
      var pattern = new RegExp('(\.pdf)$');
      if(!pattern.test(filename)){
        alert('select pdf only');
        return false;
      }
      return true;
    }
  </script>
</body>

</html>